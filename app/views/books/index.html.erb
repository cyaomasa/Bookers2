 <h1>User info</h1>
<div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p>name : <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <p>
     <%= link_to edit_user_path(@user) do %>
     <i class="fa-solid fa-user-gear"></i>
     <% end %>
    </p>
</div>
 
 <h1>New book</h1>
 <%= form_with model: @book do |f| %>
 <h4>Title</h4>
   <%= f.text_field :title %>
 <h4>Option</h4>
  <%= f.text_area :body %>
 <%= f.submit 'Create book' %>
 <% end %>

 <table>
  <thead>
   <tr>
   <th colspan="1"></th>
   <th>Title</th>
   <th>Opinion</th>
   </tr>
  </thead>
  
  <tbody><%= @books.each do |book| %>
  <%= link_to book_path(book.id) do %>
  <tr>
   <td><%= image_tag @user.get_profile_image(100,100) %></td>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>
 </table>
 <% end %>