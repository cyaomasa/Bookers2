<h1>User info</h1>
<div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <p>name : <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <p>
     <%= link_to edit_user_path(@user) do %>
     <i class="fa-solid fa-user-gear"></i>
     <% end %>
    </p>
</div>

<h1>New book</h1>
 <%= form_with model: @book do |f| %>
 <h4>Title</h4>
   <%= f.text_field :title %>
 <h4>Option</h4>
  <%= f.text_area :body %>
 <%= f.submit 'Create book' %>
 <% end %>


<h1>Users</h1>
 
 <table>
  <thead>
   <tr>
   <th>image</th>
   <th>name</th>
   </tr>
  </thead>
  
  <tbody><%= @users.each do |user| %>
  <tr>
   <td><%= image_tag @user.get_profile_image(100,100) %></td>
   <td><%= user.name %></td>
   <td><%= link_to "Show", user_path(@user) %></td>
  </tr>
  </tbody>
 </table>
 <% end %>